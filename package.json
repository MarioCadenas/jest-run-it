{
  "name": "jestifyde",
  "displayName": "jestifyde",
  "description": "Nicer Jest test runner",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.40.2"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": [
      {
        "title": "Jestifyde Config",
        "properties": {
          "jestifyde.jestConfigPath": {
            "type": "string",
            "default": "",
            "description": "Jest config path (relative to ${workFolder} e.g. jest-config.json)",
            "scope": "window"
          },
          "jestifyde.jestPath": {
            "type": "string",
            "default": "",
            "description": "Absolute path to jest bin file (e.g. /usr/lib/node_modules/jest/bin/jest.js)",
            "scope": "window"
          },
          "jestifyde.runTestLabel": {
            "type": "string",
            "default": "üèÉ‚Äç‚ôÇÔ∏è",
            "description": "Label for the run test action",
            "scope": "window"
          },
          "jestifyde.debugTestLabel": {
            "type": "string",
            "default": "üêû",
            "description": "Label for the debug test action",
            "scope": "window"
          },
          "jestifyde.testMatchPatterns": {
            "type": "array",
            "default": [
              "**/*.{spec,test}.{js,ts,jsx,tsx}",
              "**/__test__/*.{js,ts,jsx,tsx}"
            ],
            "description": "Glob patterns to match test files",
            "scope": "window"
          }
        }
      }
    ],
    "commands": [
      {
        "command": "jestifyde.debugTest",
        "title": "Debug test"
      },
      {
        "command": "jestifyde.runTest",
        "title": "Run test"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.40.2",
    "glob": "^7.1.5",
    "mocha": "^6.2.2",
    "typescript": "^3.6.4",
    "tslint": "^5.20.0",
    "vscode-test": "^1.2.2"
  },
  "dependencies": {
    "jest-editor-support": "^27.1.1"
  }
}
